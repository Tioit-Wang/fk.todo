{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "todo-tool",
  "version": "0.1.0",
  "identifier": "com.vwyxgwang.todo.tool",

  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Todo Tool",
        "url": "/#/main",
        "width": 1200,
        "height": 980,
        "minWidth": 960,
        "minHeight": 980,
        "resizable": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
